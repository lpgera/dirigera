  },
  "homepage": "https://github.com/lpgera/dirigera#readme",
  "dependencies": {
    "commander": "^14.0.2",
    "got": "^14.6.5",
    "mdns-server": "^1.0.11",
    "p-retry": "^7.1.1",
    "reconnecting-websocket": "^4.4.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.8",
    "@tsconfig/strictest": "^2.0.8",
    "@types/node": "^24.10.1",
    "@types/ws": "^8.18.1",
    "husky": "^9.1.7",
